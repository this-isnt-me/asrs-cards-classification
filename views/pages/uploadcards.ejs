<%- include ('../partials/header'); -%>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-1"></div>
		<div id="mainCont" class="col-sm-10 mainCont mainHeight shadow">
			<h1>Salus</h1>
			<h2>Upload Portal</h2>
			<br>
			<hr class="style1">
			<div id="staticCont" class="container-fluid">			
				<div id="btnSection">
					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-10">
							<h3 class="navunder text-center"><strong>Card Upload</strong></h3>
							<hr class="style2">	
							<div id="cardUploadSection">
								<form id="cardUploadForm" name="cardUploadForm">
									<br>
									<div class="row">
										<textarea id="cardText" name="cardText" rows="4" cols="50"></textarea>
									</div>
									<br>
									<div class="row">
										<div class="col-md-3"></div>
										<div class="col-sm-12 col-md-6">
											<button type="button" id="cardUploadBtn" name="cardUploadBtn" class="modalForm btn btn-outline-light">Upload</button>
										</div>
										<div class="col-md-3"></div>
									</div>
								</form>
							</div>
							<br>
							<hr class="style2">	
							<div id="displaySection"></div>
							<hr class="style2">
							<div id="guageSection">
								<div class="row">
									<div class="col-md-6 text-center">
										<div id="guageOne"></div>
										<h6 id="guageLabelOne" class="navunder text-center"></h6>
									</div>
									<div class="col-md-6 text-center">
										<div id="guageTwo"></div>
										<h6 id="guageLabelTwo" class="navunder text-center"></h6>
									</div>
								</div>
							</div>
							<hr class="style2">
						</div>
						<div class="col-sm-1"></div>
					</div>
				</div>
			</div>	
			<div id="masterCont" class="container-fluid">
			</div>		
		</div>
		<div class="col-sm-1"></div>
	</div>
</div>
<script type="text/javascript" src="/frontend_funcs/autosize.js"></script>
<script type="text/javascript" src="/frontend_funcs/gauge.js"></script>
<script type="text/javascript" src="/frontend_funcs/uploadcards.js"></script>
