<%- include ('../partials/header'); -%>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-1"></div>
		<div id="mainCont" class="col-sm-10 mainCont mainHeight shadow">
			<h1>Salus</h1>
			<h2>Upload Portal</h2>
			<br>
			<hr class="style1">
			<div id="masterCont" class="container-fluid">			
				<div id="codeSection">
					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-10">
							<h2 class="navunder text-center"><strong>Request Access Code</strong></h2>
							<hr class="style2">	
							<div id="requestAccess">
								<div class="row">
									<div class="col-1"></div>
									<div class="col-10">
										<p class="fontSize175">Enter your email to request access code</p>
										<input type="email" id="emailAddress" name="emailAddress" class="modalForm" placeholder="Enter your email address...." required>
									</div>
									<div class="col-1"></div>
								</div>
								<div class="row">
									<div class="col-md-4"></div>
									<div class="col-sm-12 col-md-4">
										<button type="button" id="requestCode" name="requestCode" class="modalForm btn btn-outline-light">Request Code</button>
									</div>
									<div class="col-md-4"></div>
								</div>
							</div>
							<br>
							<div class="row">
								<div class="col-12">
									<div id="msg" class="text-center"></div>
								</div>
							</div>
							<hr class="style2">
						</div>
						<div class="col-sm-1"></div>
					</div>
				</div>
			</div>		
		</div>
		<div class="col-sm-1"></div>
	</div>
